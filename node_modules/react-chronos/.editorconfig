# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation.
[*.js]
indent_style = space
indent_size = 2

# Because NPM doesn't respect formatting and I don't want to fight it.
[{package.json}]
indent_style = space
indent_size = 2
